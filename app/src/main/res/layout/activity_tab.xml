<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightGray"
    tools:context="com.alkasilverlake.activity.TabActivity">


    <RelativeLayout
        android:id="@+id/rr"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorWhite"
        android:layout_alignParentLeft="true">

        <TextView
            android:id="@+id/tv_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="5dp"
            android:text="Registration"
            android:textColor="@color/colorBlack"
            android:textSize="17dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="11dp"
            android:layout_alignRight="@+id/im_cartbadge"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/cartbadgecircle"
            android:gravity="center">

            <TextView
                android:id="@+id/count_cartbadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="0"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                android:textStyle="bold" />


        </RelativeLayout>


        <ImageView
            android:id="@+id/im_cartbadge"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/cart" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tab_li"
        android:background="@color/colorLightGray"
        android:layout_below="@+id/rr"

        />

    <LinearLayout
        android:id="@+id/tab_li"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:weightSum="5"
        android:background="@color/colorWhite"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/order"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="18dp"
            app:srcCompat="@drawable/ic_wedding_planning"

            />

        <ImageView
            android:id="@+id/not"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="18dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_notification"

            />
        <ImageView
            android:id="@+id/home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_big_bottle_of_water"
            android:padding="18dp"

            />
        <ImageView
            android:id="@+id/user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_user"
            android:layout_weight="1"
            android:padding="18dp"


            />

        <ImageView
            android:id="@+id/setting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_settings"
            android:layout_weight="1"
            android:padding="18dp"

            />

    </LinearLayout>

</RelativeLayout>
